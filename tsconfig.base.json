{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@workshop/catalogue-feature-shell": [
        "libs/catalogue/feature-shell/src/index.ts"
      ],
      "@workshop/home-feature-home": ["libs/home/feature-home/src/index.ts"],
      "@workshop/catalogue-types": ["libs/catalogue/types/src/index.ts"],
      "@workshop/catalogue/feature-catalogue-details": [
        "libs/catalogue/feature-catalogue-details/src/index.ts"
      ],
      "@workshop/catalogue-feature-catalogue-list": [
        "libs/catalogue/feature-catalogue-list/src/index.ts"
      ],
      "@workshop/home-feature-shell": ["libs/home/feature-shell/src/index.ts"],
      "@workshop/shared-ui-header": ["libs/shared/ui/ui-header/src/index.ts"],
      "@workshop/shared-ui-product-card": [
        "libs/shared/ui/ui-product-card/src/index.ts"
      ],
      "@workshop/shared-ui-hero": ["libs/shared/ui/ui-hero/src/index.ts"],
      "@workshop/catalogue-data-access": [
        "libs/catalogue/data-access/src/index.ts"
      ],
      "@workshop/shared-types": ["libs/shared/types/src/index.ts"],
      "@workshop/catalogue-feature-catalogue-filters": [
        "libs/catalogue/feature-catalogue-filters/src/index.ts"
      ],
      "@workshop/shared-util-router": [
        "libs/shared/utils/util-router/src/index.ts"
      ],
      "@workshop/shared-ui-filters": ["libs/shared/ui/ui-filters/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
